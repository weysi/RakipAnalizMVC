@using Entity
@model UrunGrubu

<h2>Ürün Grupları - Yeni</h2>

<form method="post">
    <div class="form-group">
        <input name="GrupAdi" placeholder="Grup Adı" class="form-control" />
    </div>
    <div class="form-group">
        <select name="UstGrupId">
            <option value="">Yok</option>
            @foreach (UrunGrubu item in ViewBag.Gruplar)
            {
                <option value="@item.Id">@item.GrupAdi</option>
            }
        </select>
    </div>
    <button class="btn btn-primary">Kaydet</button>
</form>